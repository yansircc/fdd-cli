{
	"name": "fdd-cli",
	"version": "0.3.0",
	"description": "Feedforward & Feedback Driven Development CLI - 前馈驱动 + 反馈驱动开发",
	"type": "module",
	"bin": {
		"fdd": "./dist/index.js"
	},
	"scripts": {
		"build": "bun build src/index.ts --outdir dist --target node && rm -rf templates && cp -r src/templates templates",
		"dev": "bun run src/index.ts",
		"test": "bun test",
		"lint": "biome check .",
		"lint:fix": "biome check --write --unsafe .",
		"typecheck": "tsc --noEmit",
		"prepare": "husky"
	},
	"dependencies": {
		"@inquirer/prompts": "^8.1.0",
		"chalk": "^5.3.0",
		"cli-table3": "^0.6.5",
		"commander": "^12.1.0",
		"gray-matter": "^4.0.3",
		"minimatch": "^10.1.1",
		"yaml": "^2.6.1",
		"zod": "^4.3.4"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/bun": "^1.2.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"typescript": "^5.7.2"
	},
	"keywords": [
		"fdd",
		"feedback-driven-development",
		"ai",
		"claude",
		"pitfall",
		"experience-compiler"
	],
	"author": "yansircc",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/yansircc/fdd-cli.git"
	},
	"bugs": {
		"url": "https://github.com/yansircc/fdd-cli/issues"
	},
	"homepage": "https://github.com/yansircc/fdd-cli#readme",
	"engines": {
		"node": ">=18"
	},
	"files": ["dist", "templates"],
	"lint-staged": {
		"*.{ts,tsx,js,json}": ["biome check --write"]
	}
}
